---
import { Image } from 'astro:assets';
import { slugify } from "../js/utils";

import coffee from '../assets/coffee.jpg'
import band from '../assets/band.jpg'
import gear from '../assets/gear.jpg'
import photoshoot from '../assets/photoshoot.jpg'
import record  from '../assets/record.jpg';

interface Props {
	title: string;
	body: string;
	href?: string;
	image?: string;
}

const { title, body , image} = Astro.props;
const imageName = {band, gear, coffee, photoshoot, record}
---

<li class="link-card">
	<a href={`/${slugify(title)}/`}>
		<h2 transition:name="title">
			{title}
		</h2>
		     <Image src={imageName[image]} alt={title}  format='webp' transition:name='card-image' /> 
		    
		      <!-- <img src=`src/assets/${image}.jpg` alt="default-image"  />   -->
			 
		<p class="whitespace-pre-line	">
			{body}
		</p>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 2em 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin: 2rem 0;
		 
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
